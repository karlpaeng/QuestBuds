<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="32dp"
    android:backgroundTint="@color/light_gray"
    android:background="@drawable/shape_round_big">


    <TextView
        android:id="@+id/tvTopDiaQuestEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Quest details"
        android:fontFamily="@font/modelica_medium"
        android:textSize="20sp"
        android:textColor="@color/charc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Quest description"
        android:fontFamily="@font/modelica_medium_italic"
        android:textSize="16sp"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tvTopDiaQuestEdit"
        app:layout_constraintLeft_toLeftOf="@id/tvTopDiaQuestEdit"/>

    <EditText
        android:id="@+id/etQuestText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_round_small"
        android:ems="7"
        android:fontFamily="@font/modelica_medium"
        android:hint="Enter Quest description"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:text=""
        android:textColorHighlight="@color/light_gray"
        android:textColorHint="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Time"
        android:fontFamily="@font/modelica_medium_italic"
        android:textSize="16sp"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/etQuestText"
        app:layout_constraintLeft_toLeftOf="@id/etQuestText"/>

    <Button
        android:id="@+id/btnSelectQuestTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_white_on_dark"
        android:fontFamily="@font/modelica_medium"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp"
        android:text="Select time"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:theme="@style/whiteOnGray"
        app:layout_constraintLeft_toLeftOf="@id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/modelica_medium_italic"
        android:text="Days of the week"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/etQuestText"
        app:layout_constraintTop_toBottomOf="@id/btnSelectQuestTime" />

    <CheckBox
        android:id="@+id/cbSun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sun"
        android:theme="@style/darkOnWhite"
        android:fontFamily="@font/modelica_medium"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/textView7"
        app:layout_constraintTop_toBottomOf="@id/textView7"/>

    <CheckBox
        android:id="@+id/cbMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/modelica_medium"
        android:textSize="18sp"
        android:text="Mon"
        android:theme="@style/darkOnWhite"
        app:layout_constraintLeft_toRightOf="@id/cbSun"
        app:layout_constraintTop_toBottomOf="@id/textView7" />

    <CheckBox
        android:id="@+id/cbTue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/modelica_medium"
        android:textSize="18sp"
        android:text="Tue"
        android:theme="@style/darkOnWhite"
        app:layout_constraintLeft_toRightOf="@id/cbMon"
        app:layout_constraintTop_toBottomOf="@id/textView7" />

    <CheckBox
        android:id="@+id/cbWed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/modelica_medium"
        android:textSize="18sp"
        android:text="Wed"
        android:theme="@style/darkOnWhite"
        app:layout_constraintLeft_toRightOf="@id/cbTue"
        app:layout_constraintTop_toBottomOf="@id/textView7" />

    <CheckBox
        android:id="@+id/cbThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/modelica_medium"
        android:textSize="18sp"
        android:text="Thu"
        android:theme="@style/darkOnWhite"
        app:layout_constraintLeft_toLeftOf="@id/cbSun"
        app:layout_constraintTop_toBottomOf="@id/cbSun" />

    <CheckBox
        android:id="@+id/cbFri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/modelica_medium"
        android:textSize="18sp"
        android:text="Fri"
        android:theme="@style/darkOnWhite"
        app:layout_constraintLeft_toLeftOf="@id/cbMon"
        app:layout_constraintTop_toBottomOf="@id/cbSun" />

    <CheckBox
        android:id="@+id/cbSat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/modelica_medium"
        android:textSize="18sp"
        android:text="Sat"
        android:theme="@style/darkOnWhite"
        app:layout_constraintLeft_toLeftOf="@id/cbTue"
        app:layout_constraintTop_toBottomOf="@id/cbSun" />

    <Button
        android:id="@+id/btnDiaQuestEditDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/ripple_white_on_dark"
        android:fontFamily="@font/modelica_medium"
        android:paddingHorizontal="16dp"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:theme="@style/whiteOnGray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbThu" />

    <Button
        android:id="@+id/btnDiaQuestEditDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:theme="@style/whiteOnDark"
        android:background="@drawable/ripple_white_on_dark"
        android:fontFamily="@font/modelica_medium"
        android:paddingHorizontal="16dp"
        android:text="Delete"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@id/btnDiaQuestEditDone"
        app:layout_constraintTop_toBottomOf="@+id/cbThu" />
</androidx.constraintlayout.widget.ConstraintLayout>