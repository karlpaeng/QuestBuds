<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clManageQuests"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ripple_dark_on_white">
    <TextView
        android:id="@+id/tvTimeOnManageQuests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12:30 pm"
        android:textColor="@color/gray"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/svg_time"
        android:drawableTint="@color/gray"
        android:fontFamily="@font/modelica_medium_italic"
        android:textSize="16sp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvTextOnManageQuestsQuests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tesigj hsegbsehgro bgreshrbfv esrbseb vh eb uheba vxt"
        android:fontFamily="@font/modelica_medium"
        android:textSize="20sp"
        android:textColor="@color/charc"
        android:layout_marginHorizontal="16dp"

        app:layout_constraintTop_toBottomOf="@id/tvTimeOnManageQuests"
        app:layout_constraintLeft_toLeftOf="@id/tvTimeOnManageQuests"
        />
    <TextView
        android:id="@+id/tvDaysOnManageQuests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12:30 pm"
        android:textColor="@color/gray"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/svg_calendar"
        android:drawableTint="@color/gray"
        android:gravity="center_vertical"
        android:fontFamily="@font/modelica_medium_italic"
        android:textSize="16sp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTextOnManageQuestsQuests"/>

</androidx.constraintlayout.widget.ConstraintLayout>